<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.team.jcti.ttr.game.DecksAndCardsFragment">

    <TextView
        android:id="@+id/destination_deck"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="dest deck count"
        android:background="@drawable/destdeck"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_weight="1"
        android:layout_margin="5dp"
      />

    <TextView
        android:id="@+id/train_deck"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="train deck count"
        android:background="@drawable/traindeck"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_margin="5dp"/>


    <ImageView
        android:id="@+id/face_up_train_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/rainbowtrain" />

    <ImageView
        android:id="@+id/face_up_train_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/rainbowtrain" />

    <ImageView
        android:id="@+id/face_up_train_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/rainbowtrain" />

    <ImageView
        android:id="@+id/face_up_train_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/rainbowtrain" />

    <ImageView
        android:id="@+id/face_up_train_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/rainbowtrain" />


</LinearLayout>
