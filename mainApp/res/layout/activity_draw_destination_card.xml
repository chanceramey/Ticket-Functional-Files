<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.team.jcti.ttr.drawdestinationcard.DrawDestinationCardActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:text="Select Destination Cards to Keep:"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/destination_option_one"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="match_parent"
            android:background="#FACAFA"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="From:\nTo:\nValue: "
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/destination_option_two"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="150dp"
            android:background="#FACAFA"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="From:\nTo:\nValue: "
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/destination_option_three"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="match_parent"
            android:background="#FACAFA"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="From:\nTo:\nValue: "
            android:layout_margin="5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_gravity="center" />

</LinearLayout>
