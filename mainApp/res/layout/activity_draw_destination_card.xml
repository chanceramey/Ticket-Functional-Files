<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    tools:context="com.team.jcti.ttr.drawdestinationcard.DrawDestinationCardActivity"
    app:columnCount="3"
    app:orientation="vertical"
    app:rowCount="3">

    <TextView
        android:id="@+id/destination_text_one"
        android:layout_width="wrap_content"
        app:layout_columnWeight="1"
        android:text=""
        app:layout_columnSpan="1"
        app:layout_rowSpan="1"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_gravity="center" />

    <ImageView
        android:id="@+id/destination_option_one"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        android:src="@drawable/tempdestcard"
        app:layout_columnSpan="1"
        app:layout_rowSpan="1"
        app:layout_column="0"
        app:layout_row="1"/>

    <TextView
        android:id="@+id/destination_text_two"
        android:layout_width="wrap_content"
        android:text=""
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        app:layout_columnSpan="1"
        app:layout_rowSpan="1"
        app:layout_column="1"
        app:layout_row="0"/>

    <ImageView
        android:id="@+id/destination_option_two"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        android:src="@drawable/tempdestcard"
        app:layout_columnSpan="1"
        app:layout_rowSpan="1"
        app:layout_column="1"
        app:layout_row="1"/>

    <TextView
        android:id="@+id/destination_text_three"
        android:layout_width="wrap_content"
        android:text=""
        app:layout_columnWeight="1"
        app:layout_gravity="center"
        app:layout_columnSpan="1"
        app:layout_rowSpan="1"
        app:layout_column="2"
        app:layout_row="0"/>

    <ImageView
        android:id="@+id/destination_option_three"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        android:src="@drawable/tempdestcard"
        app:layout_columnSpan="1"
        app:layout_rowSpan="1"
        app:layout_column="2"
        app:layout_row="1"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        android:text="submit"
        app:layout_rowSpan="1"
        app:layout_columnSpan="1"
        app:layout_column="1"
        app:layout_row="2"
        app:layout_gravity="fill" />

</android.support.v7.widget.GridLayout>
